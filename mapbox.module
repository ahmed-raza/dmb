/**
 * Implementation of openlayers_layers_handler_info()
 * For OpenLayers Module 1.x
 */
function mapbox_openlayers_layer_handler() {
  return array(
    'MapBox' => array(
      'layer_handler' => 'MapBox',
      'js_file' => $js_file
    )
  );
}

